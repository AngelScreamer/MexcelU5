@model MexcelU5.Models.Administrador
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_LayAdmin"; }
<main>
    <section id="datos">
        <h1>Inicio de sesión</h1>

        <form method="post" action="~/Admin/Home/InicioDeSesionAdmin">
            <label>Clave:</label><br />
            <input type="number" asp-for="Clave" required /><br />
            <label>Contraseña:</label><br />
            <input type="password" asp-for="Contrasena" required />
            <br />
            <input type="submit" value="Aceptar" />
            <a href="~/Home">Regresar</a>
            @Html.ValidationSummary()
        </form>
    </section>
</main>