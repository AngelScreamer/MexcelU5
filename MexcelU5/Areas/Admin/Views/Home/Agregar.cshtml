@model MexcelU5.Models.ViewModels.AdminCelularesViewModel
@{
    Layout = "_LayAdmin";
}

<h1>Agregar</h1>
<form enctype="multipart/form-data" asp-area="Admin" asp-controller="Home" asp-action="Agregar" method="post">
    <h2>Agregar Smartphone.</h2>
    <select asp-for="Smartphones.IdMarca" asp-items="@(new SelectList(Model.Marcas,"Id","Nombre"))">
        <option>--Seleccione una Marca--</option>
    </select><br />
    <label>Nombre:</label>
    <input type="text" asp-for="Smartphones.Nombre" required /> <br />
    <label>Descripción:</label>
    <textarea asp-for="Smartphones.Descripcion"></textarea>
    <label>Pantalla:</label>
    <input type="text" asp-for="Smartphones.Pantalla" required /> <br />
    <label>Procesador:</label>
    <input type="text" asp-for="Smartphones.Procesador" required />
    <label>Memoria RAM:</label>
    <input type="number" max="12" min="0" asp-for="Smartphones.Ram" required /> <br />
    <label>Almacenamiento:</label>
    <input type="number"max="512" min="0" asp-for="Smartphones.Almacenamiento" required />
    <label>Expansión:</label>
    <input type="text" asp-for="Smartphones.Expansion" required /> <br />
    
    <h2>Estadísticas.</h2>
    <label>Cámara:</label>
    <input type="text" asp-for="Smartphones.Caracteristicas.Camara" required />
    <label>Batería:</label>
    <input type="number" max="7000" min="0" asp-for="Smartphones.Caracteristicas.Bateria" required /> <br />
    <label>Sistema Operativo:</label>
    <input type="text" asp-for="Smartphones.Caracteristicas.So" required />
    <label>Tamaño:</label>
    <input type="number" max="10.0" min="0.0" asp-for="Smartphones.Caracteristicas.Tamaño" required /><br />
    <label>Peso:</label>
    <input type="number" max="400" min="0" asp-for="Smartphones.Caracteristicas.Peso" required />
    <label>Precio:</label>
    <input type="number" max="50000" min="0" asp-for="Smartphones.Caracteristicas.Precio" required /><br />

  <input type="file" accept="image/jpg" asp-for="Archivo" onchange="mostrarImagen(this)" /><br />
    <img id="imagePreview" src="~/CatalogoS/NoDisp.jpg" alt="Vista previa de la imagen" />

    <label id="error">
        @Html.ValidationSummary()
    </label>

    <div class="botones">
        <input class="btnSumbit" type="submit" value="Agregar" />
        <a href="~/Admin/Home">
            <input type="button" value="Cancelar" />
        </a>
    </div>
</form>
<script>
    function mostrarImagen(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById("imagePreview").src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }</script>
